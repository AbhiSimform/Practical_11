@model List<Practical_11.Models.User>

@{
    ViewBag.Title = "Home Page";
}


<h2> Users </h2>



<table class="container text-center">
    <thead class="bg-primary">
        <tr class="row">
           <td class="col-3">
               Name
           </td> 
            <td class="col-4">
                Date of birth
            </td>
            <td class="col-5">
                Address
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr class="row">
                    <td class="col-3">
                        @item.Name
                    </td>
                    <td class="col-4">
                        @item.DOB.Date
                    </td>
                    <td class="col-5">
                        @item.Address
                    </td>
                </tr>
            }
    </tbody>
</table>

